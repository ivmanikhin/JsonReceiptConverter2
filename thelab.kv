WidgetsExample:

<WidgetsExample>:

    cols: 3

    ToggleButton:
        text: root.toggle_button_state
        on_state: root.button_toggle(self)

    Button:
        text: "Click here"
        font_name: "fonts/RAVIE.TTF"
        on_press: root.button_change_label_text()

    Label:
        text: root.label_text
        font_name: "fonts/RAVIE.TTF"
        font_size: "80dp"



<BoxLayoutExample>:
    orientation: "vertical"
    Button:
        text: "A"
        size: "200dp", "40dp"
        #width: "200dp"                         # may be width and height separately
        size_hint: None, None
        pos_hint: { "center_x": .5 }            # can be "x" for left side of the button, "center_x" for center of the button, "right" for right side of the button
                                                # can be "y" for bottom of the button, "center_y" for center of the button, "top" for top of the button
    Button:
        text: "B"
        size_hint: 1, 2           # width, height in percent of default size
    Button:
        text: "C"


<MainWidget>:
    Button:
        text: "Something"
        size: "150dp", "40dp"       #size of finger touch is 40x40
        pos: "100dp", "200dp"

    Label:
        text: "Something else"
        size: "150dp", "40dp"
        pos: "100dp", "400dp"
        color: 1, 0, 0, 1           #r, g, b, visibility (0...1)