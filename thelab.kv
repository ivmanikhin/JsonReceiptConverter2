WidgetsExample:

<WidgetsExample>:

    cols: 3

    ToggleButton:
        id: toggle_button
        on_state: root.button_toggle(self)
        text: "Off"
        size_hint: None, 1
        width: "100dp"

    Button:
        id: count_button
        on_press: root.button_change_label_text()
        text: "Click here"
        disabled: True

    Label:
        id: counter_label
        text: str(root.count)
        font_size: "80dp"

    Switch:
        id: switch
        on_active: root.on_switch_active(self)
        width: "100dp"

    Slider:
        id: slider
        on_value: root.on_slider_value(self)
        min: 0
        max: 100
        value: root.slider_value
        orientation: "vertical"

    Label:
        id: slider_label
        text: str(int(slider.value))
        font_size: "80dp"

<BoxLayoutExample>:
    orientation: "vertical"
    Button:
        text: "A"
        size: "200dp", "40dp"
        #width: "200dp"                         # may be width and height separately
        size_hint: None, None
        pos_hint: { "center_x": .5 }            # can be "x" for left side of the button, "center_x" for center of the button, "right" for right side of the button
                                                # can be "y" for bottom of the button, "center_y" for center of the button, "top" for top of the button
    Button:
        text: "B"
        size_hint: 1, 2           # width, height in percent of default size
    Button:
        text: "C"


<MainWidget>:
    Button:
        text: "Something"
        size: "150dp", "40dp"       #size of finger touch is 40x40
        pos: "100dp", "200dp"

    Label:
        text: "Something else"
        size: "150dp", "40dp"
        pos: "100dp", "400dp"
        color: 1, 0, 0, 1           #r, g, b, visibility (0...1)