MainWidget:

<MainWidget>:
    do_scroll_x: False
    do_scroll_y: True
    scroll_type: ["bars", "content"]
    bar_width: "20dp"
    GridLayout:
        id: main_layout
        cols: 1
        padding: "5dp", "5dp", "5dp", "5dp"
        spacing: "5dp"
        height: self.minimum_height
        size_hint: 1, None

        TextInput:
            id: text_input
            height: self.minimum_height
            text: "/storage/emulated/0/_Receipts/"
            size_hint: 1, None

        TextInput:
            id: converted_json
            height: self.minimum_height
            text: "none"
            size_hint: 1, None

        Button:
            on_press: root.act(text_input.text)
            size_hint: 1, None
            height: "40dp"
            text: "GO"




